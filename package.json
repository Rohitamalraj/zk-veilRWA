{
  "name": "veilrwa-monorepo",
  "version": "1.0.0",
  "description": "VeilRWA - Privacy-Preserving RWA Yield Platform on Mantle",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network mantleSepolia",
    "test:contracts": "cd contracts && npx hardhat test"
  },
  "keywords": [
    "RWA",
    "ZK",
    "Privacy",
    "Mantle",
    "DeFi"
  ],
  "author": "",
  "license": "MIT"
}
