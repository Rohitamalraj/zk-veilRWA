{
  "name": "veilrwa-monorepo",
  "version": "1.0.0",
  "description": "VeilRWA - Privacy-Preserving RWA Yield Platform on Mantle",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network mantleSepolia",
    "test:contracts": "cd contracts && npx hardhat test"
  },
  "keywords": [
    "RWA",
    "ZK",
    "Privacy",
    "Mantle",
    "DeFi"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.5.0",
    "ethers": "^6.16.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.17",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "snarkjs": "^0.7.5"
  }
}
